<Window x:Class="LazyGeneralsClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LazyGeneralsClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/resources/img/mainmenu.png"/>
    </Window.Background>

    <Grid>
        <Button Content="Начать игру" Name="StartButton" HorizontalAlignment="Center" Margin="0,111,0,0" VerticalAlignment="Top" Height="40" Width="120" Click="StartButton_Click"/>
        <Button x:Name="ExitButton" Content="Выйти" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Height="40" Width="120" Click="ExitButton_Click"/>
    </Grid>
</Window>
